{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2016",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    //
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    //
    "declaration": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "./dist",
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules"
  ]
}